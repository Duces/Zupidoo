<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/gameimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/diablosmall" />

    <TextView
        android:id="@+id/related_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/related_title"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textSize="10sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/related_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/gameimage"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Call of Duty: Advanced Warfare - Xbox One"
        android:textSize="17sp" />

</RelativeLayout>
